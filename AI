    <script>
        // Step navigation
        document.getElementById('startAnalysis').addEventListener('click', function() {
            const stockCode = document.getElementById('stockCode').value;
            
            if (!stockCode.trim()) {
                // Add shake animation
                document.getElementById('stockCode').style.animation = 'shake 0.5s';
                document.getElementById('stockCode').focus();
                setTimeout(() => {
                    document.getElementById('stockCode').style.animation = '';
                }, 500);
                return;
            }
            
            // Switch to step 2
            document.getElementById('step1').classList.remove('active');
            document.getElementById('step2').classList.add('active');
            
            // Simulate analysis steps
            setTimeout(() => {
                document.getElementById('step1-analysis').classList.add('active');
            }, 500);
            
            setTimeout(() => {
                document.getElementById('step2-analysis').classList.add('active');
            }, 1500);
            
            setTimeout(() => {
                document.getElementById('step3-analysis').classList.add('active');
            }, 2500);
            
            // Switch to results after 3.5 seconds
            setTimeout(() => {
                document.getElementById('step2').classList.remove('active');
                document.getElementById('step3').classList.add('active');
                
                // Update title with entered code
                document.getElementById('resultTitle').textContent = 
                    `${stockCode.toUpperCase()} Analysis Report`;
            }, 3500);
        });
        
        // Add shake animation
        const style = document.createElement('style');
        style.textContent = `
            @keyframes shake {
                0%, 100% { transform: translateX(0); }
                25% { transform: translateX(-5px); }
                75% { transform: translateX(5px); }
            }
        `;
        document.head.appendChild(style);
    </script>
